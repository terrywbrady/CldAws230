{
  "Resources": {
    "Instance": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId": "ami-01bbe152bf19d0289",
        "InstanceType": "t2.micro",
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "\n",
              [
                "#!/bin/bash",
                "curl -o /tmp/startup.sh https://raw.githubusercontent.com/terrywbrady/CldAws230/week4/week4/startup.sh",
                "chmod 744 /tmp/startup.sh",
                "/tmp/startup.sh"
              ]
            ]
          }
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "EC2 Master"
          }
        ],
        "NetworkInterfaces": [
          {
            "AssociatePublicIpAddress": true,
            "DeviceIndex": 0
          }
        ]
      }
    },
    "InstanceSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Security group for ssh",
        "VpcId": "",
        "SecurityGroupIngress": [
          {
            "FromPort": 22,
            "ToPort": 22,
            "IpProtocol": "tcp",
            "CidrIp": "0.0.0.0/0"
          },
          {
            "FromPort": 80,
            "ToPort": 80,
            "IpProtocol": "tcp",
            "CidrIp": "0.0.0.0/0"
          }
        ]
      }
    }
  }
}
